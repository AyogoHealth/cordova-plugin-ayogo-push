<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.ayogo.push"
    version="0.0.1">

    <name>Push</name>
    <description>Push Notifications</description>
    <keywords>cordova,ios,push,notifications</keywords>

    <engines>
        <engine name="cordova-ios" version=">= 3.0.0" />
    </engines>

    <dependency id="com.vladstirbu.cordova.promise" url="https://github.com/vstirbu/PromisesPlugin.git">
    </dependency>

    <js-module src="www/push.js" name="Push">
        <clobbers target="window.pushRegistrationManager" />
    </js-module>

    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="Push">
                <param name="ios-package" value="PushPlugin" />
            </feature>
        </config-file>

        <source-file src="src/ios/PushPlugin.m" />
        <header-file src="src/ios/PushPlugin.h" />

        <source-file src="src/ios/AppDelegate+pushHandler.m" />
        <header-file src="src/ios/AppDelegate+pushHandler.h" />
    </platform>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Push">
                <param name="android-package" value="com.ayogo.push.PushPlugin" />
            </feature>
        </config-file>


        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.GET_ACCOUNTS" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.VIBRATE"/>
            <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
            <uses-permission android:name="$PACKAGE_NAME.permission.C2D_MESSAGE" />
            <permission android:name="$PACKAGE_NAME.permission.C2D_MESSAGE" android:protectionLevel="signature" />
            <service android:name="com.ayogo.push.InstanceIDListenerService" android:exported="false">
                <intent-filter>
                    <action android:name="com.google.android.gms.iid.InstanceID"/>
                </intent-filter>
            </service>
        </config-file>

        <source-file src="src/android/InstanceIDListenerService.java" target-dir="src/com/ayogo/push" />
        <source-file src="src/android/PushPlugin.java" target-dir="src/com/ayogo/push" />

        <framework src="src/android/push.gradle" custom="true" type="gradleReference" />
    </platform>
</plugin>

