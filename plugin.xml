<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-ayogo-push"
    version="1.0.0">

    <name>Push</name>
    <description>Push Notifications</description>
    <keywords>cordova,ios,push,notifications</keywords>

    <engines>
        <engine name="cordova-ios" version=">= 4.0.0" />
    </engines>

    <js-module src="www/push.js" name="Push">
        <clobbers target="window.pushRegistrationManager" />
    </js-module>

    <hook type="before_compile" src="src/ios/swift-hook.js" />

    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="Push">
                <param name="ios-package" value="CDVPushPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/ios/PushPlugin.swift" />
        <source-file src="src/ios/CDVAppDelegate+Push.swift" />
    </platform>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Push">
                <param name="android-package" value="com.ayogo.push.PushPlugin" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        </config-file>

        <source-file src="src/android/com/ayogo/push/PushPlugin.java" target-dir="src/com/ayogo/push" />

        <framework src="src/android/push.gradle" custom="true" type="gradleReference" />
    </platform>
</plugin>

